<div class="tabs {{@tab-style}} {{@customClass}}" ...attributes>
{{#let
  (hash
    selectAction=this.select
    registerAction=this.register
    activeName=this.activeName
    name=this.name
    activeData=this.activeData
  ) as | api |
}}
  {{yield
    (hash
      tabs=(component "x-tabs-tabs" api=api ownerName=this.name)
      panes=(component "x-tabs-panes" api=api)
      dataPane=(component "x-tabs-pane-data" api=api)
      api=api
    )
  }}
{{/let}}
</div>